<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="420dp"
    android:padding="@dimen/fragment_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Titolo -->
        <TextView
            android:id="@+id/edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modifica_scheda_title"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/fragment_title_padding" />

        <!-- Form selezione (cliccabile) -->
        <LinearLayout
            android:id="@+id/edit_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/form_padding_vertical"
            android:background="@drawable/bg_form_action"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/edit_select_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seleziona_scheda_modificare"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:paddingStart="@dimen/form_padding_horizontal"
                android:paddingEnd="@dimen/form_padding_horizontal"/>

            <ImageView
                android:id="@+id/edit_select_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/down_arrow"
                android:contentDescription="@string/desc_down_arrow"
                android:paddingEnd="@dimen/form_arrow_margin"/>
        </LinearLayout>

        <!-- spazio tra form e campi -->
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

        <!-- Campi editabili (nascosti finchÃ© non si seleziona) -->
        <LinearLayout
            android:id="@+id/edit_fields_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="@dimen/content_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nome_scheda_label"
                android:layout_marginTop="@dimen/label_margin_top"/>

            <EditText
                android:id="@+id/edit_input_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:background="@drawable/edittext_bg"
                android:padding="@dimen/edittext_padding"
                android:layout_marginTop="@dimen/text_margin_top"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/esercizi_label"
                android:layout_marginTop="@dimen/label_margin_top"/>

            <EditText
                android:id="@+id/edit_input_esercizi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/exercise_height"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:background="@drawable/edittext_bg"
                android:padding="@dimen/edittext_padding"
                android:scrollbars="vertical"
                android:layout_marginTop="@dimen/text_margin_top"/>

        </LinearLayout>

        <!-- Bottoni -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/fragment_button_margin">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/salva"
                android:textAllCaps="false"
                android:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/button_space"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/annulla"
                android:textAllCaps="false"
                android:backgroundTint="@color/red"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/button_space"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
